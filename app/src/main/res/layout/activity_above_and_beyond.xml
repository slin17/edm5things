<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="edu.slincolgate.edm5things.AboveAndBeyond">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/above_n_beyond_mini" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Artist: Above and Beyond"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Genre: Trance, Progressive Trance"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Info: \n- an English Progressive Trance group consisting of members Jono Grant, Tony McGuinness and Paavo Siljamaki \n- the owners of London-based electronic dance music labels Anjunabeats and Anjunadeep"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="For a taste of what trance music is like, the works of Above and Beyond offer you a remarkable experience."
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Notable Work: Fly to New York (ft. Zoë Johnston), Counting Down the Days (Original Mix) (ft. Gemma Hayes)"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Song Below: Fly to New York (ft. Zoë Johnston) \nGenre: Trance \nBPM: 130 \nKey: C maj"
                android:textColor="#000000"
                android:textSize="15sp" />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_view_above_n_beyond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />


            <Button
                android:id="@+id/back_button_above_n_beyond"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="left"
                android:onClick="backButton"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#1976D2" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>