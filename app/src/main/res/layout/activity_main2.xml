<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="edu.slincolgate.edm5things.Main2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/shm_g" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Artist: Swedish House Mafia"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Genre: Progressive House, Electro House"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Info: \n- a Swedish electronic music supergroup consisting of disc jockeys and producers Axwell, Steve Angello and Sebastian Ingrosso. \n- officially formed in late 2008 and disbanded in early 2013 \n- Axwell: founded Axtone Records, a British record label, in 2005 \n- Steve Angello: founder and owner of Size Records based in Stockholm, Sweden \n- Sebastian Ingrosso: founded Refune Music, a Swedish independent record label, in 2003"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="They have been called &quot;the faces of mainstream Progressive House music&quot;.\n &quot;The Legends of House Music&quot;"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Notable Work: Greyhound, Don't You Worry Child"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Song Below: Greyhound \nGenre: Progressive House \nBPM: 127 \nKey: G min "
                android:textColor="#000000"
                android:textSize="15sp" />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_view_shm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />


            <Button
                android:id="@+id/back_button_shm"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="left"
                android:onClick="backButton"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#1976D2" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>

